<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hibernate.dao.system.UserInfoDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hibernate.entity.system.UserInfo">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="genecode" property="genecode"/>
        <result column="mobile" property="mobile"/>
        <result column="login_name" property="loginName"/>
        <result column="login_password" property="loginPassword"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="BaseColumnList">
        t.id, t.code, t.name, t.genecode, t.mobile, t.login_name, t.login_password, t.status, t.create_time, t.modify_time
    </sql>

    <select id="queryForList" resultMap="BaseResultMap" parameterType="map">
        SELECT
        <include refid="BaseColumnList"/>
        FROM sys_user_info t
        <where>
            <if test="id != null and id != ''">
                AND t.id = #{id}
            </if>
            <if test="ids != null and ids.size() > 0">
                AND t.id IN
                <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">#{item}</foreach>
            </if>
            <if test="status != null">
                AND t.status = #{status}
            </if>
            <if test="statusIds != null and statusIds.size > 0">
                AND t.status IN
                <foreach item="item" index="index" collection="statusIds" open="(" separator="," close=")">#{item}
                </foreach>
            </if>
            <if test="genecode != null and genecode != ''">
                AND t.genecode = #{genecode}
            </if>
            <if test="genecodes != null and genecodes.size > 0">
                AND t.genecode IN
                <foreach item="item" index="index" collection="genecodes" open="(" separator="," close=")">#{item}
                </foreach>
            </if>
            <if test="q != null and q != ''">
                AND (t.code LIKE CONCAT(#{q}, '%') OR t.name LIKE CONCAT('%', #{q}, '%') OR CONCAT(t.code, ' ', t.name)
                LIKE CONCAT(#{q}, '%'))
            </if>
        </where>
    </select>
</mapper>
